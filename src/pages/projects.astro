---
import Layout from '../layouts/Layout.astro';
import Meme from '../components/Meme.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title="Projects">
	<main>
    <Navbar />

    <h1 class="underline"><a href="/">Projects</a></h1>

  <p>Look at all the projects we have here!</p>
	<Meme />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>
