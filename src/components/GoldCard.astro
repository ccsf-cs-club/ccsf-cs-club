---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="gold-card">
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <p class="py-2">
      {body}
    </p>
  </a>
</li>
<style>
  .gold-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #d4af37;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .gold-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    color: rgb(212, 175, 55);
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .gold-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient-gold);
  }
  .gold-card:is(:hover, :focus-within) h2 {
    color: rgb(253, 212, 115);
  }
</style>
