---
interface Props {
    //Your name
    name: string;
    //To get image from website - https://bulbapedia.bulbagarden.net/wiki/Bulbasaur_(Pok%C3%A9mon)
    href: string;
    //This is your bio
    description: string;
    // These are just stats name = whateber u want and stat = also whatever u want
    stat1_name: string
    stat2_name: string
    stat3_name: string
    stat4_name: string
    stat1: string;
    stat2: string;
    stat3: string;
    stat4: string;
}
const { name, href, description, stat1_name, stat2_name, stat3_name, stat4_name, stat1, stat2, stat3, stat4 } = Astro.props;
---

<main class="pokemon-card">
    <div class="card-front">
        <div class="icon-list">
            <a href="" target="_blank">
                <img src="https://upload.wikimedia.org/wikipedia/commons/3/39/Pokeball.PNG" alt="Poké Ball">
            </a>
            <a href="https://github.com" target="_blank">
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/github/github-original.svg" alt="GitHub">
            </a>
            <a href="https://linkedin.com" target="_blank">
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/linkedin/linkedin-original.svg" alt="LinkedIn">
            </a>
        </div>
        <div class="header">
            <div class="names"> 
                <h1 id="name">{name}</h1>
            </div>
        </div>
    
        <img class="pokemon-image" src={href}>
        <div class="stats">
            <div>
                <p class="statName">{stat1_name}</p>
                <p class="statName">{stat2_name}</p>
                <p class="statName">{stat3_name}</p>
                <p class="statName">{stat4_name}</p>
            </div>
            <div>
                <p class="statNums">{stat1}</p>
                <p class="statNums">{stat2}</p>
                <p class="statNums">{stat3}</p>
                <p class="statNums">{stat4}</p>
            </div>
        </div>
    </div>

    <div class="card-back hidden">
        <div class="icon-list">
            <a href="" target="_blank">
                <img src="https://upload.wikimedia.org/wikipedia/commons/3/39/Pokeball.PNG" alt="Poké Ball">
            </a>
            <a href="https://github.com" target="_blank">
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/github/github-original.svg" alt="GitHub">
            </a>
            <a href="https://linkedin.com" target="_blank">
                <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/linkedin/linkedin-original.svg" alt="LinkedIn">
            </a>
        </div>
        <div class="header">
            <div class="names"> 
                <h1 id="name">SUMMARY</h1>
            </div>
        </div>
        <div class="summary-box">
        <div class="bio">
            <p>{description}</p>
        </div>
        </div>
        
    </div>
</main>

<style>
* {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
}

p {
    color: rgb(0, 0, 0);
}

h2 {
    font-size: 20px;
    font-weight: 600;
    color: black;
}

div {
    border: none;
}

.summary-box {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 100%;
}

.bio {
    padding: 1rem;
    width: 100%;
    border: 3px solid transparent;
    border-radius: 10px;
    background: linear-gradient(white, white) padding-box, 
                linear-gradient(45deg, red, orange, yellow, red) border-box;
}

.pokemon-card {
    width: 300px;
    height: 500px;
    min-width: 300px;
    padding: 1rem;
    border: 1px solid rgb(0, 0, 0);    
    border-radius: 10px;
    background: linear-gradient(to bottom, rgb(68, 210, 46), white, rgb(68, 210, 46));
    box-shadow: 1px 2px 3px rgb(0, 0, 0);
    perspective: 500px; 
}

.hidden {
    display: none;
}

.icon-list {
    display: flex;
    gap: 5px;
    align-items: center;
    justify-content: flex-end;
    margin-top: 1rem;
    position: absolute;
    right: 10px;
}

.icon-list a img {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease-in-out;
}

.icon-list a img:hover {
    transform: scale(1.2);
}

.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2  rem;
}

.stats {
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 1px 2px 2px rgb(0, 0, 0);
    padding: 0 1rem;
    background: linear-gradient(to right, rgb(163, 24, 222), rgb(223, 220, 222), rgb(163, 24, 222));
    margin-top: 1rem;
}

.names {
    margin-top: 3rem;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
}

#name {
    color: rgb(0, 0, 0);
    font-weight: 800;
    font-size: 22px;
}

#num {
    font-size: 22px;
    font-weight: 800;
    color: rgb(2, 2, 116);
    padding: 1rem;
}

.statName {
    color: rgb(0, 0, 0);
    font-weight: 600;
}

.statNums {
    color: rgb(0, 0, 0);
    font-weight: 600;
}

.back-description {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 5rem;
}

.pokemon-image {
    border: 3px solid transparent;
    border-radius: 10px;
    background: linear-gradient(white, white) padding-box, 
                linear-gradient(45deg, red, orange, yellow, red) border-box;
    padding: 5px;
}
</style>

<script>
document.querySelectorAll('.pokemon-card').forEach(card => {
    card.addEventListener('click', function () {
        const frontCard = this.querySelector('.card-front');
        const backCard = this.querySelector('.card-back');

        frontCard.classList.toggle('hidden');
        backCard.classList.toggle('hidden');
    });
});
</script>