---
import NavbarDaisy from "../components/NavbarDaisy.astro";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "CCSF CS Club - City College of San Francisco Computer Science Club" } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-[#f7f3e6] dark:bg-[#13151a]">
  <head> 
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="darkreader-lock" />
    <title>{title}</title>
    <script src="https://unpkg.com/htmx.org@2.0.0" integrity="sha384-wS5l5IKJBvK6sPTKa2WZ1js3d947pvWXbPJ1OmWfEuxLgeHcEbjUUA5i9V5ZkpCw" crossorigin="anonymous"></script>
  </head>
  <NavbarDaisy />
  <body> 
    <slot />
  </body>

  <style is:global>
    :root {
      --accent: 136, 58, 234;
      --accent-light: 224, 204, 250;
      --accent-dark: 49, 10, 101;
      --accent-gold: 200, 177, 115;
      --accent-gradient: linear-gradient(
        45deg,
        rgb(var(--accent)),
        rgb(var(--accent-light)) 30%,
        white 60%
      );
      --accent-gradient-gold: linear-gradient(
        45deg,
        rgb(206, 159, 21),
        rgb(247, 209, 66) 30%,
        white 60%
      );
    }
    html {
      font-family: system-ui, sans-serif;
      background: #13151a;
      background-size: 224px;
    }
    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }
    .title-gradient {
      background: linear-gradient(#e66465, #9198e5);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
  </style>
</html>
